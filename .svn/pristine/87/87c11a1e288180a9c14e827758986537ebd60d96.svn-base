/*
 弹出框样式
 * */
.allBox{
	font-family:"微软雅黑";
	/*margin: 10% auto;*/
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
}
.cr_box{
	width: 350px;
	height: 200px;
	position: fixed;
	top: 10%;
	left: 45%;
	z-index: 1055;
}
.cr_moddle{
	width: 100%;
	height: 1394px;
	position: absolute;
	top: 0;
	left: 0;
	background: #000;
	z-index: 1041;
	opacity: 0.3;
	filter:alpha(opacity:30);
}
.cr_title{
	width: 350px;
	height: 50px;
	background:#7dc4dc;
	border-radius:5px 5px 0px 0px;
}
.cr_title_msg{
	height: 50px;
	line-height: 50px;
	padding-left: 5%;
	color:#fff;
	font-size:19px;
	font-weight: 700;
	
}
.cr_content{
	width: 350px;
	height: 150px;
	background:#fff;
	border: 1px solid #7dc4dc;
	border-bottom: none;
}
.cr_content_msg{
	height: 65px;
	margin-top: 35px;
	width: 348px;
	text-align: center;
	color:#00BFFF;
	font-size: 16px;
	overflow: auto;
	
}
.cr_bottom{
	height: 50px;
	width: 348px;
}
.cr_bottom_btn{
	width: 174px;
	height: 50px;
	line-height: 50px;
	float: left;
	text-align: center;
	color: #fff;
	font-weight: 700;
	background: #5cb85c;
	cursor:pointer;
}
.cr_bottom_btn:hover{
	background:#00A5dC;
}
.cr_bottom_btn:last-of-type{
	background: #F7605C;
}
.cr_bottom_btn:last-of-type:hover{
	background:#E25955;
}